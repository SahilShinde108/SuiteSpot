<% layout("/layouts/boilerplate") %>

<style>
    #filters {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }

    .filter {
        text-align: center;
        margin-inline: 1rem;
        margin-top: 1rem;
        opacity: 0.7;
        transition: all 0.3s ease-in-out;
        cursor: pointer;
    }

    .filter:hover {
        opacity: 1;
    }

    .filter p {
        font-size: 0.8rem;
    }

    .tax-info {
        display: none;
    }

    .tax-toggle {
        border: 1px solid black;
        border-radius: 1rem;
        height: 3.25rem;
        padding: 1rem;
        margin-left: 3rem;
        display: flex;
        align-items: center;
    }
</style>

<div id="filters ms-5">
    <form action="/listings" method="GET" class="row g-3 align-items-center mb-3 mt-3">
        <div class="col-md-2">
            <label for="startDate" class="form-label">Start Date</label>
            <input type="date" class="form-control" id="startDate" name="startDate" value="<%= typeof query !== 'undefined' ? query.startDate : '' %>">
        </div>
        <div class="col-md-2">
            <label for="endDate" class="form-label">End Date</label>
            <input type="date" class="form-control" id="endDate" name="endDate" value="<%= typeof query !== 'undefined' ? query.endDate : '' %>">
        </div>
        <div class="col-md-2">
            <label for="city" class="form-label">City</label>
            <input type="text" class="form-control" id="city" name="city" placeholder="e.g., Nashik" value="<%= typeof query !== 'undefined' ? query.city : '' %>">
        </div>
        <div class="col-md-3">
            <label for="festivalName" class="form-label">Festival</label>
            <input type="text" class="form-control" id="festivalName" name="festivalName" placeholder="e.g., Kumbh Mela" value="<%= typeof query !== 'undefined' ? query.festivalName : '' %>">
        </div>
        <div class="col-md-2 mt-5">
            <button type="submit" class="btn btn-danger w-100">Search</button>
        </div>
        <div class="col-md-1 d-flex align-items-end mt-5">
            <button type="button" class="btn btn-secondary w-100" id="clearFilters">Clear</button>
        </div>
    </form>
    <!-- <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
        </div>
    </div> -->
</div>

<div class="row row-cols-1 mt-3">
    <% for(let listing of allListings) { %>
        <a href="/listings/<%= listing.id %>" class="listing-link">
            <div class="card listing-card d-flex flex-row my-3">
                <img src="<%= listing.image %>" class="card-img-left" alt="listing_image" style="height: 22rem;">
                <div class="card-body " style="margin-left: 5rem;">
                    <p class="card-text">
                    <b><%= listing.title %></b> <br></p>
                    <p class="card-text"></p>&#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                    <i class="tax-info"> &nbsp; &nbsp;+18% GST</i>
                    </p>
                    <!-- <p class="card-text"><%= listing.description %></p> -->
                    <p class="card-text"><%= listing.location %></p>
                    <p class="card-text"><%= listing.country %></p>
                    <p class="card-text"><b>Capacity:</b> <%= listing.capacity %></p>
                    <% if (listing.festivalName) { %>
                        <p class="card-text"><b>Festival Name:</b> <%= listing.festivalName %></p>
                    <% } %>
        
                    <% if (listing.nearestLocation1 && listing.distance1) { %>
                        <p class="card-text"><b>Nearest Location 1:</b> <%= listing.nearestLocation1 %> (<%= listing.distance1 %> km)</p>
                    <% } %>
                    <% if (listing.nearestLocation2 && listing.distance2) { %>
                        <p class="card-text"><b>Nearest Location 2:</b> <%= listing.nearestLocation2 %> (<%= listing.distance2 %> km)</p>
                    <% } %>
                    <% if (listing.nearestLocation3 && listing.distance3) { %>
                        <p class="card-text"><b>Nearest Location 3:</b> <%= listing.nearestLocation3 %> (<%= listing.distance3 %> km)</p>
                    <% } %>
                    <% if (listing.nearestLocation4 && listing.distance4) { %>
                        <p class="card-text"><b>Nearest Location 4:</b> <%= listing.nearestLocation4 %> (<%= listing.distance4 %> km)</p>
                    <% } %>
                </div>
                <div class="card-body" sty>
                    <button class="btn btn-success">Book Now</button>
                </div>
            </div>
        </a>
        <hr>
    <% } %>
</div>

<script>
    const taxSwitch = document.getElementById("flexSwitchCheckDefault");
    taxSwitch.addEventListener("click", () => {
        let taxInfo = document.getElementsByClassName("tax-info");
        for(info of taxInfo) {
            if(info.style.display !== "inline") {
                info.style.display = "inline";
            } else {
                info.style.display = "none";
            }
        }
    });
</script>

<script>
    document.getElementById('clearFilters').addEventListener('click', () => {
        window.location.href = '/listings';
    });
</script>

