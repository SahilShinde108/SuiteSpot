<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3>My Bills</h3>
        <% if (bills.length === 0) { %>
            <p>No bills found.</p>
        <% } else { %>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Bill ID</th>
                        <th scope="col">Booking ID</th>
                        <th scope="col">Listing Title</th>
                        <th scope="col">Amount</th>
                        <th scope="col">Issue Date</th>
                        <th scope="col">Due Date</th>
                        <th scope="col">Status</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let bill of bills) { %>
                        <tr>
                            <td><%= bill.id %></td>
                            <td><%= bill.bookingId %></td>
                            <td><%= bill.Booking ? bill.Booking.Listing.title : 'N/A' %></td>
                            <td>&#8377; <%= bill.amount.toLocaleString("en-IN") %></td>
                            <td><%= new Date(bill.issueDate).toLocaleDateString() %></td>
                            <td><%= bill.dueDate ? new Date(bill.dueDate).toLocaleDateString() : 'N/A' %></td>
                            <td><%= bill.status %></td>
                            <td>
                                <a href="/billing/<%= bill.id %>" class="btn btn-sm btn-info">View</a>
                                <% if (bill.pdfPath) { %>
                                    <a href="<%= bill.pdfPath %>" class="btn btn-sm btn-secondary" target="_blank">Download PDF</a>
                                <% } %>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        <% } %>
    </div>
</div>